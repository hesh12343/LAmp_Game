<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10sp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamp Game"
        android:layout_gravity="center"
        android:textSize="40sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/lamp1"
            android:layout_width="60dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:contentDescription="Lamp 1"
            android:src="@drawable/lamp_off" />

        <ImageView
            android:id="@+id/lamp2"
            android:layout_width="60dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:contentDescription="Lamp 2"
            android:src="@drawable/lamp_off" />

        <ImageView
            android:id="@+id/lamp3"
            android:layout_width="60dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:contentDescription="Lamp 3"
            android:src="@drawable/lamp_off" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:contentDescription="Show Lamp State"
        android:onClick="onClickLamp"
        android:src="@drawable/lamp_off" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onBtnClick"
        android:text="New Lamp"
        android:visibility="invisible" />
</LinearLayout>